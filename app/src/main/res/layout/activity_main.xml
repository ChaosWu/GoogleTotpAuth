<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:clickable="true" >

    <TextView
        android:id="@+id/key_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="50dp"
        android:singleLine="true"
        android:text="实时动态口令，竭诚保护您的上网安全"
        android:textColor="#888888"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="17dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/rotate_text_layout"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/rotate_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:layout_gravity="center_vertical"
                android:text="6"
                android:textColor="#fff"
                android:textSize="42sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/rotate_text_layout"
            android:gravity="center"
            android:orientation="horizontal"  >

            <TextView
                android:id="@+id/rotate_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:layout_gravity="center"
                android:text="7"
                android:textColor="#fff"
                android:textSize="42sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/rotate_text_layout"
            android:gravity="center"
            android:orientation="horizontal"  >

            <TextView
                android:id="@+id/rotate_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:layout_gravity="center"
                android:text="3"
                android:textColor="#fff"
                android:textSize="42sp"
                android:textStyle="bold"
                android:orientation="horizontal"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/rotate_text_layout"
            android:gravity="center"
            android:orientation="horizontal"  >

            <TextView
                android:id="@+id/rotate_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:layout_gravity="center"
                android:text="9"
                android:textColor="#fff"
                android:textSize="42sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/rotate_text_layout"
            android:gravity="center"
            android:orientation="horizontal"  >

            <TextView
                android:id="@+id/rotate_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:layout_gravity="center"
                android:text="2"
                android:textColor="#fff"
                android:textSize="42sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rotate_text_layout"
            android:gravity="center"
            android:orientation="horizontal"  >

            <TextView
                android:id="@+id/rotate_text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:layout_gravity="center"
                android:text="0"
                android:textColor="#fff"
                android:textSize="42sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/key_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="10dp"
        android:max="2000"
        android:progress="1000"
        android:progressDrawable="@drawable/keybar_style" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/under_textleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="动态口令将在"
            android:textColor="#434343"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/count_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="30"
            android:textColor="#ff6600"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/under_textright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="秒之后改变"
            android:textColor="#434343"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView android:id="@+id/serverTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="#888888"
        android:visibility="gone"/>

</LinearLayout>